    <title>socket</title>
</head>
<body>
    
<div class="container my-5">
    <input type="text"  id="title" class="form-control" placeholder="Title">
    <textarea id="desc" cols="30" rows="3" placeholder="description.." class="form-control my-3"></textarea>
    <button class="btn btn-info" onclick="sendData()">Add</button>
</div>

<div class="container">

  <input type="text" placeholder="Search" id="search" onkeyup="searchArticle(this)" class="form-control">

</div>

<!--  show all articles-->
<div class="container">
    <div id="row" class="row">
       
    </div>
</div>

    
  
  <!-- Modal -->
  <div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title" id="exampleModalLabel">Modal title</h5>
          <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
          </button>
        </div>
        <div class="modal-body">
            <input id="edit_title" class="form-control" placeholder="Title" type="text">
            <textarea placeholder="description.." class="form-control my-3" id="edit_desc" cols="30" rows="3"></textarea>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
          <button type="button" onclick="updateArticle()" class="btn btn-info">Update</button>
        </div>
      </div>
    </div>
  </div>


